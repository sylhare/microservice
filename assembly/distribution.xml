<assembly>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>pom.xml</include>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
        </fileSet>
        <fileSet>
            <directory>data</directory>
        </fileSet>
        <fileSet>
            <directory>doc</directory>
        </fileSet>
        <fileSet>
            <directory>target/site/apidocs</directory>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
        </fileSet>
        <fileSet>
            <directory>target/${project.artifactId}-${project.version}-standalone</directory>
        </fileSet>
        <fileSet>
            <includes>
                <include>target/${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
